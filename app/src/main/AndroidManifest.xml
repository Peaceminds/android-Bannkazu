<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drolma.bannkazu">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/title_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".landlord3.Intro3Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.Intro3" />
            </intent-filter>
        </activity>

        <activity android:name=".landlord3.Game3Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"
            android:parentActivityName=".landlord3.Intro3Activity">
            <intent-filter>
                <action android:name="android.intent.action.Game3" />
            </intent-filter>
        </activity>

        <activity android:name=".landlord5.Intro5Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.Intro5" />
            </intent-filter>
        </activity>

        <activity android:name=".landlord5.Game5Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"
            android:parentActivityName=".landlord5.Intro5Activity">
            <intent-filter>
                <action android:name="android.intent.action.Game5" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.Settings" />
            </intent-filter>
        </activity>

        <activity android:name=".SpecificActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.Specific" />
            </intent-filter>
        </activity>

        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
