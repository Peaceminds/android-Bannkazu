        android:id="@+id/game_rtvLayout4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:background="@color/gray"
        >

        <TextView
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:text="@string/text_def_p4_name"
            android:id="@+id/game_sn4"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/tog_btn_fm"
            android:textOn="@string/tog_btn_ll"
            android:id="@+id/game_dzBtn4"
            android:layout_toRightOf="@id/game_sn4"
