    <RelativeLayout
        android:layout_below="@id/game_rtvLayout5"
        android:id="@+id/game_rtvLayout6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tips_bannkazu"
            android:id="@+id/game_sn6"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:id="@+id/game_inputBannkazu"
            android:numeric="integer"
            android:text="1"
            android:textAlignment="center"
            android:layout_below="@id/game_sn6"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="-"
            android:id="@+id/game_btn_sub"
            android:layout_toLeftOf="@id/game_inputBannkazu"
            android:layout_below="@id/game_sn6"/>

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="+"
            android:id="@+id/game_btn_add"
            android:layout_toRightOf="@id/game_inputBannkazu"
            android:layout_below="@id/game_sn6"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/game_rtvLayout6"
        android:id="@+id/game_rtvLayout7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:background="@color/gray"
        >


        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_farmer_win"
            android:id="@+id/game_farmerWinBtn"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:background="@color/Green"
            />

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_landlord_win"
            android:id="@+id/game_landlordWinBtn"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
