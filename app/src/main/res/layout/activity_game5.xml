<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".landlord5.Intro5Activity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/game_rtvLayout1"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:background="@color/lightYellow"
        >

        <TextView
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:text="@string/text_def_p1_name"
            android:id="@+id/game_sn1"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/tog_btn_fm"
            android:textOn="@string/tog_btn_ll"
            android:id="@+id/game_dzBtn1"
            android:layout_toRightOf="@id/game_sn1"
            android:layout_marginLeft="25sp"
            android:checked="false"
            android:layout_centerVertical="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_spring1"
            android:id="@+id/game_ckb1"
            android:checked="false"
            android:layout_toRightOf="@id/game_dzBtn1"
            android:layout_marginLeft="25sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_def_zero"
            android:id="@+id/game_bannkazu1"
            android:layout_centerVertical="true"
            android:textSize="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/game_rtvLayout1"
        android:id="@+id/game_rtvLayout2"
        android:orientation="vertical"
